<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title><%= @credits[0]['name'] %></title>
</head>
<body>
  <h1><%= @credits[0]['name'] %></h1>
  <h3>Credits</h3>
  <table>
    <tr>
      <td>
        Movie
      </td>
      <td>
        Role
      </td>
      <td>
        Year
      </td>
    </tr>
    <% @credits.each do |movie| %>
      <tr>
        <td>
          <a href="/movies/<%=movie["movie_id"]%>">
            <%= movie['title'] %>
          </a>
        </td>
        <td>
          <%= movie['character'] %>
        </td>
        <td>
          <%= movie['year'] %>
        </td>
      </tr>
    <%end%>
  </table>
</body>
</html>
