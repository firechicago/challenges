<h1>Add a new Restaurant</h1>
<%= form_for @restaurant do |f| %>
<%= f.label :name %>
<%= f.text_field :name %><br />
<%= f.label :address %>
<%= f.text_field :address %><br />
<%= f.label :city %>
<%= f.text_field :city %><br />
<%= f.label :state %>
<%= f.text_field :state %><br />
<%= f.label :zip %>
<%= f.text_field :zip %><br />
<%= f.label :category %>
<%= f.text_field :category %><br />
<%= f.label :description %>
<%= f.text_area :description %><br />
<%= f.submit %>
<% end %>


<% @restaurant.errors.full_messages.each do |error| %>
<p><%= error %></p>
<% end %>
